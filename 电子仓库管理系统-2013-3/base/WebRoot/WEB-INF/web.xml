<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
  	<error-code>500</error-code>
  	<location>/error.html</location>
  </error-page>
  <error-page>
  	<error-code>404</error-code>
  	<location>/error.html</location>
  	</error-page>
	<filter>
		<filter-name>CharsetAllEncodingFilter</filter-name>
		<filter-class>com.hyh.util.CharsetFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GBK</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharsetAllEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>


	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.hyh.util.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/bim/*</url-pattern>
		<url-pattern>/sm/*</url-pattern>
		<url-pattern>/sq/*</url-pattern>
		<url-pattern>/um/*</url-pattern>
	</filter-mapping>
			
	<filter>
		<filter-name>BimFilter</filter-name>
		<filter-class>com.hyh.util.BimFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>BimFilter</filter-name>
		<url-pattern>/bim/*</url-pattern>
		<url-pattern>/sort</url-pattern>
		<url-pattern>/brand</url-pattern>
		<url-pattern>/goods</url-pattern>
		<url-pattern>/vendor</url-pattern>
		<url-pattern>/client</url-pattern>
		<url-pattern>/shelf</url-pattern>
	</filter-mapping>	

	<filter>
		<filter-name>SmFilter</filter-name>
		<filter-class>com.hyh.util.SmFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SmFilter</filter-name>
		<url-pattern>/sm/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>SqFilter</filter-name>
		<filter-class>com.hyh.util.SqFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SqFilter</filter-name>
		<url-pattern>/sq/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UmFilter</filter-name>
		<filter-class>com.hyh.util.UmFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UmFilter</filter-name>
		<url-pattern>/um/*</url-pattern>
		<url-pattern>/user</url-pattern>		
		<url-pattern>/section</url-pattern>
	</filter-mapping>
		
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.hyh.service.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>user</servlet-name>
  	<servlet-class>com.hyh.service.UserServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>resource</servlet-name>
  	<servlet-class>com.hyh.service.ResourceServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>section</servlet-name>
  	<servlet-class>com.hyh.service.DepartmentServlet</servlet-class>	
  </servlet> 
  <servlet>
  	<servlet-name>sort</servlet-name>
  	<servlet-class>com.hyh.service.GoodsSortServlet</servlet-class>
  </servlet> 
  <servlet>
  	<servlet-name>brand</servlet-name>
  	<servlet-class>com.hyh.service.GoodsBrandServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>goods</servlet-name>
  	<servlet-class>com.hyh.service.GoodsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>vendor</servlet-name>
  	<servlet-class>com.hyh.service.VendorServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>client</servlet-name>
  	<servlet-class>com.hyh.service.CustomerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>shelf</servlet-name>
  	<servlet-class>com.hyh.service.ShelfServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>stockin</servlet-name>
  	<servlet-class>com.hyh.service.StockInServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>stockout</servlet-name>
  	<servlet-class>com.hyh.service.StockOutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deliver</servlet-name>
  	<servlet-class>com.hyh.service.DeliverServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>checks</servlet-name>
  	<servlet-class>com.hyh.service.ChecksServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>stock</servlet-name>
  	<servlet-class>com.hyh.service.StockServlet</servlet-class>
  </servlet>
       
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>user</servlet-name>
  	<url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>resource</servlet-name>
  	<url-pattern>/resource</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>section</servlet-name>
  	<url-pattern>/section</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>sort</servlet-name>
  	<url-pattern>/sort</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>brand</servlet-name>
  	<url-pattern>/brand</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>goods</servlet-name>
  	<url-pattern>/goods</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>vendor</servlet-name>
  	<url-pattern>/vendor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>client</servlet-name>
  	<url-pattern>/client</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>shelf</servlet-name>
  	<url-pattern>/shelf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>stockin</servlet-name>
  	<url-pattern>/stockin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>stockout</servlet-name>
  	<url-pattern>/stockout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deliver</servlet-name>
  	<url-pattern>/deliver</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>checks</servlet-name>
  	<url-pattern>/checks</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>stock</servlet-name>
  	<url-pattern>/stock</url-pattern>
  </servlet-mapping>
</web-app>
